<h1>Create Car Entry</h1>

<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanations">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :color, "Color" %><br/>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :year, "Year" %><br/>
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :mileage, "Mileage" %><br/>
    <%= f.text_field :mileage %>
  </div>
  <div class="field">
    <%= f.label :description, "Description" %><br/>
    <%= f.text_area :description, size: "30x10" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
